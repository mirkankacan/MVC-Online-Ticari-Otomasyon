@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.Cariler>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Cari </h3> <br /><h12 style="color:#a10019">Bu tablo PartialView ile eklenmiştir</h12>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>AD</th>
                            <th>SOYAD</th>
                            <th>ŞEHİR</th>
                            <th>MAIL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Cariid </td>
                                <td>@x.CariAd</td>
                                <td>@x.CariSoyad</td>
                            <td>@x.CariSehir</td>
                                <td>@x.CariMail</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>