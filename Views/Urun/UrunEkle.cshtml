@model MvcOnlineTicariOtomasyon.Models.Sınıflar.Urun
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Ürün Sayfası</h2>
<br />

<form class="form-group" method="post">

    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.Urunad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Urunad, "", new { @style = "color:red" })

    <br />

    @Html.Label("Marka")
    @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Marka, "", new { @style = "color:red" })

    <br />

    @Html.Label("Stok")
    @Html.TextBoxFor(x => x.Stok, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Stok, "", new { @style = "color:red" })


    <br />
    @Html.Label("Alış Fiyatı")
    @Html.TextBoxFor(x => x.AlisFiyat, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.AlisFiyat, "", new { @style = "color:red" })

    <br />

    @Html.Label("Satış Fiyatı")
    @Html.TextBoxFor(x => x.SatisFiyat, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SatisFiyat, "", new { @style = "color:red" })


    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

    <br />

    @Html.Label("Ürün Görseli")
    @Html.TextBoxFor(x => x.UrunGorsel, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.UrunGorsel, "", new { @style = "color:red" })

    <br />
    @Html.Label("Durumu")
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Durum, "", new { @style = "color:red" })

    <br />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <button class="btn btn-success" id="btn1">Kaydet</button>
    <script>
        $('#btn1').click(function () {
            swal("Kayıt başarıyla yapıldı.");
        })
    </script>

</form>

