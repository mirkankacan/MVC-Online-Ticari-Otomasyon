@model MvcOnlineTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisYap";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<form class="form-group" method="post">

    @Html.Label("Ürün ID")
    <input type="text" name="Urunid" value="@ViewBag.dgr1" class="form-control" readonly />

    <br />

    @Html.Label("Personel ID")
    @Html.DropDownListFor(x => x.Personelid, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Personelid, "", new { @style = "color:red" })

    <br />

    @Html.Label("Cari ID")
    @Html.TextBoxFor(x => x.Cariid, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Cariid, "", new { @style = "color:red" })


    <br />
    @Html.Label("Adet")
    <br />
    <input type="number" name="Adet" max="10" min="0" placeholder="Adet giriniz..." id="txt1" class="form-control" onchange="sum();" />
    <br />
    <br />

    @Html.Label("Fiyat")
    <input type="text" name="Fiyat" value="@ViewBag.dgr2" id="txt2" class="form-control" onkeyup="sum();" />


    <br />
    @Html.Label("Toplam Tutar")
    <input type="text" name="ToplamTutar" value="0" id="txt3" class="form-control" readonly />
     
   


    <br />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <button class="btn btn-success" id="btn1">Satış Yap</button>
    <script>
        $('#btn1').click(function () {
            swal("Satış başarıyla yapıldı.");
        })
    </script>

</form>
<br />

<script>
    function sum() {
        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var sonuc = parseInt(sayi1) * parseInt(sayi2);
        if (!isNaN(sonuc)) {
            document.getElementById('txt3').value = sonuc;
        }
    }
</script>
