@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Personel Satış</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active" style="color:olive;font-size:20px">Personel Adı: @ViewBag.dpers</li>
</ol>

<table class="table table-condensed">
    <tr>
        <th>SATIŞ ID</th>
        <th>ÜRÜN</th>
        <th>CARİ</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th style="color:darkblue">YAZDIR</th>
    </tr>
    @foreach(var x in Model)
    {
<tr>
    <td>@x.Satisid</td>
    <td>@x.Urun.Urunad</td>
    <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
    <td>@x.Fiyat</td>
    <td>@x.Adet</td>
    <td>@x.ToplamTutar</td>
    <td>@x.Tarih</td>
    <td><a href="#" class="btn btn-default" style="background-color:cornflowerblue;">Yazdır</a></td>
</tr>
    }
</table>
