@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px; text-align: center">
    <tr>

        <th>KATEGORİ</th>
        <th style="color:darkred">SİL</th>
        <th style="color:darkgoldenrod">GÜNCELLE</th>
    </tr>
    @foreach (var k in Model)
    {

<tr>

    <td>
        @k.KategoriAd
    </td>
    <td><a href="/Kategori/KategoriSil/@k.KategoriID" class="btn btn-danger">Sil</a></td>
    <td><a href="/Kategori/KategoriGetir/@k.KategoriID" class="btn btn-warning">Güncelle</a></td>
</tr>
    }
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-success">Kategori Ekle</a>